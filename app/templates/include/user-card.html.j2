<div class="card mb-3 mx-auto" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{user.get_icon_url()}}" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
        <div class="card-body user-card-body">
            <h5 class="card-title">{{user.first_name}}'s Pokemon</h5>
            <p class="card-text">
                {% for poke in user.pokemons %}
                    {{poke.name.title()}}<br>
                {% endfor %}
            </p>
            <p class="card-text">Win : Loss <span class="px-2"><â€”></span> {{0 if not user.wins else user.wins}} : {{0 if not user.losses else user.losses}}</p>
            {% if current_user != user %}
                <a class="btn btn-danger fight-me" href="{{url_for('poke.fight', id=user.id)}}">Fight</a>
            {% endif %}
        </div>
    </div>
  </div>
</div>